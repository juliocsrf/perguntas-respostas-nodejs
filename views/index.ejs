<%- include('partials/header') %>

	<body>
		<%- include('partials/navbar.ejs') %>
			<div class="container">
				<hr>
				<h1> Perguntas </h1>
				<hr>
				<a href="/perguntar" class="btn btn-info">Perguntar</a>
				<hr>
				<br>
				<% perguntas.forEach(pergunta=> { %>
					<br />
					<div class="card">
						<div class="card-body">
							<h4><%= pergunta.titulo %></h4>
						</div>
						<div class="card-footer">
							<a href="/pergunta/<%=pergunta.id%>" class="btn btn-primary">Responder</a>
						</div>
					</div>
					<% }) %>
			</div>
	</body>

	<%- include('partials/footer') %>